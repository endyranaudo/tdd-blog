<div>Written by: <strong><%= @post.user.email %></strong></div>

<section class="mt-4">
  <div>
    <h3><%= @post.title %></h3>
  </div>
  <div>
    <p><%= @post.body %><p>
  </div>
  <div>
    <% if @post.user_id == current_user.id %>    
      <button type="button" class="btn btn-primary text-white mt-4"><%= link_to 'Edit post', edit_post_path, :class => 'text-white' %></button>
      <button type="button" class="btn btn-danger text-white mt-4"><%= link_to 'Delete post', @post, method: :delete, :class => 'text-white' %></button>
    <% end %>
  </div>
  <div>
    <button type="button" class="btn btn-secondary text-white mt-4"><%= link_to 'Back to Posts', posts_path, :class => 'text-white' %></button>
  </div>
</section>